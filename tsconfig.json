{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"types": ["bun"],
		"strict": true,
		"skipLibCheck": true,
		"noEmit": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	// src and util files
	"include": ["src/**/*", "util/**/*"]
}
